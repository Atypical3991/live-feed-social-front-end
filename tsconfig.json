{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["node", "react-native"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "*.ts", "*.tsx", "env.d.ts"],
  "exclude": ["node_modules"]
}